{
  "name": "lgtmai",
  "version": "0.0.1",
  "description": "Auto-apply PR reviews with Claude Code",
  "main": "cli/dist/index.js",
  "types": "cli/dist/index.d.ts",
  "bin": {
    "lgtmai": "./bin/lgtmai.js"
  },
  "workspaces": [
    "cli",
    "backend",
    "frontend"
  ],
  "scripts": {
    "build": "npm run build -w cli && npm run build -w backend && npm run build -w frontend",
    "dev": "npm run dev -w backend & npm run dev -w frontend",
    "start": "node bin/lgtmai.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "claude",
    "code-review",
    "github",
    "pr",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nearux/lgtm-ai"
  },
  "files": [
    "cli/dist",
    "backend/dist",
    "frontend/dist",
    "bin"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2"
  }
}
